<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_btn_large_oni_20170525" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_end"
        android:layout_marginLeft="@dimen/text_margin_start"
        android:layout_marginRight="@dimen/text_margin_end"
        android:layout_marginStart="@dimen/text_margin_start"
        android:layout_marginTop="7dp"
        android:lines="1"
        android:textSize="@dimen/list_item_text_size"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
